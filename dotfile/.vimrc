set nocompatible
filetype plugin indent on
syntax on

set encoding=utf-8

set nowrap
set number
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set list listchars=tab:▸-,trail:·,extends:❯,precedes:❮

set autoindent
set showmatch
set ignorecase
set smartcase
set cursorline
set incsearch
set hlsearch

vnoremap // y/<C-R>"<CR>